{
  "name": "drinky-frontend",
  "version": "1.0.0",
  "description": "Drinky TailwindCSS build",
  "scripts": {
    "build:css": "tailwindcss -i ./src/input.css -o ../src/main/resources/static/css/output.css --minify",
    "watch:css": "tailwindcss -i ./src/input.css -o ../src/main/resources/static/css/output.css --watch"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.1"
  }
}
